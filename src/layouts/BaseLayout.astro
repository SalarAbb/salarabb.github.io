---
import LofiPlayer from '../components/LofiPlayer.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Academic & Researcher" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        background-color: #fefdf8;
        color: #2d2d2d;
        line-height: 1.6;
        padding: 2rem;
        min-height: 100vh;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        padding-top: 4rem;
      }

      .back-home {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        text-decoration: none;
        color: #8b9d83;
        font-size: 0.9rem;
        margin-bottom: 3rem;
        transition: color 0.2s ease;
      }

      .back-home:hover {
        color: #6b7280;
      }

      .page-title {
        font-size: 2.5rem;
        font-weight: 300;
        margin-bottom: 0.5rem;
        color: #1f1f1f;
        text-align: center;
      }

      .page-subtitle {
        font-size: 1.1rem;
        color: #6b7280;
        margin-bottom: 4rem;
        text-align: center;
        font-weight: 300;
      }

      .content {
        margin-bottom: 4rem;
      }

      .footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid #e8e2d4;
        text-align: center;
        font-size: 0.9rem;
        color: #9ca3af;
      }

      @media (max-width: 640px) {
        body {
          padding: 1rem;
        }
        
        .container {
          padding-top: 2rem;
        }
        
        .page-title {
          font-size: 2rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/" class="back-home">
        ← Back to rooms
      </a>
      
      <div class="content">
        <slot />
      </div>
      
      <div class="footer">
        <p>Built with ☕ and lofi vibes</p>
      </div>
    </div>
    
    <LofiPlayer />
  </body>
</html>