        height: 600px;
        padding: 30px;
        border-radius: 12px;
        display: block;
        overflow-y: scroll;
        z-index: 10000;
        background: rgba(255, 255, 255, 0.4);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(255, 255, 255, 0.3);
        opacity: 1;
        animation: none;
        box-sizing: border-box;
      }

