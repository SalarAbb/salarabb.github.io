    <script>
        let currentScene = 1;
        const totalScenes = 3;

        function switchScene(n) {
            document.querySelectorAll('.bg').forEach(bg => bg.classList.add('hidden'));
            document.getElementById('bg' + n).classList.remove('hidden');
            currentScene = n;
        }

        function nextScene() {
            const next = currentScene >= totalScenes ? 1 : currentScene + 1;
            switchScene(next);
        }

        function prevScene() {
            const prev = currentScene <= 1 ? totalScenes : currentScene - 1;
            switchScene(prev);
        }

        // About dropdown functionality
        function toggleAboutContent() {
            const content = document.getElementById('aboutContent');
            const header = document.querySelector('.about-header');
            
            if (!content || !header) {
                return;
            }
            
            // Check if content is currently collapsed by checking opacity
            const currentOpacity = window.getComputedStyle(content).getPropertyValue('opacity');
            
            if (currentOpacity === '0') {
                // Show content
                content.style.opacity = '1';
                content.style.visibility = 'visible';
                header.innerHTML = 'ABOUT ME ‚ñº';
            } else {
                // Hide content
                content.style.opacity = '0';
                content.style.visibility = 'hidden';
                header.innerHTML = 'ABOUT ME ‚ñ∂';
            }
        }


        // Initialize dropdown when page loads
        document.addEventListener('DOMContentLoaded', () => {
            const header = document.querySelector('.about-header');
            if (header) {
                header.addEventListener('click', toggleAboutContent);
                console.log('Dropdown event listener added');
            }
        });

        // Keyboard
        document.addEventListener('keydown', (e) => {
            if (e.key === 'ArrowLeft') prevScene();
            if (e.key === 'ArrowRight') nextScene();
            if (e.key === 'c' || e.key === 'C') window.open('/CV.pdf', '_blank');
            if (e.key === 'b' || e.key === 'B') window.location.href = '/blog';
        });

        // Auto rotate
        setInterval(nextScene, 12000);

        // Animate bars
        setInterval(() => {
            document.querySelectorAll('.bar').forEach(bar => {
                bar.style.height = (Math.random() * 15 + 8) + 'px';
            });
        }, 300);
